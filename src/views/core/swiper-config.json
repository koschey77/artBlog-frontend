{
  "loop": true,
  "speed": 800,
  "autoplay": {
    "delay": 4000
  },
  "effect": "coverflow",
  "grabCursor": true,
  "centeredSlides": true,
  "slidesPerView": "auto",
  "coverflowEffect": {
    "rotate": 50,
    "stretch": 0,
    "depth": 100,
    "modifier": 1,
    "slideShadows": true
  },
  "pagination": {
    "el": ".swiper-pagination",
    "type": "bullets",
    "clickable": true
  },
  "navigation": {
    "nextEl": ".swiper-button-next",
    "prevEl": ".swiper-button-prev"
  },
  "breakpoints": {
    "320": {
      "slidesPerView": 1,
      "spaceBetween": 10
    },
    "768": {
      "slidesPerView": 2,
      "spaceBetween": 20
    },
    "1024": {
      "slidesPerView": 3,
      "spaceBetween": 30
    }
  }
}
